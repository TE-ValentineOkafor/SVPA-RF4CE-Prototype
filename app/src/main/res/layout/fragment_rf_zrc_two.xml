<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/frame_layout_2"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/dark_blue"
                                             xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                             tools:context="com.sony.svpa.rf4ceprototype.fragments.RFZRCTwoFragment">


    <ImageView
        android:id="@+id/remote_pin_layout"
        android:layout_width="0dp"
        android:layout_height="326dp"
        android:layout_marginEnd="166dp"
        android:layout_marginStart="166dp"
        android:padding="10dp"
        android:src="@drawable/pin_entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



    </ImageView>

    <LinearLayout
        android:id="@+id/remote_image_layout"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:background="@color/transparent_black_color"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="@string/enter_pin"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/remote_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/sony_remote"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
